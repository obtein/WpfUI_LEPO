<Window x:Class="WpfUI_LEPO.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:WpfUI_LEPO"
        xmlns:ui="http://schemas.lepo.co/wpfui/2022/xaml"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800" Background="#FF656565">
    <Grid>
        <ui:NavigationView IsPaneOpen="True" OpenPaneLength="115" Background="Red">
            <ui:NavigationView.MenuItems>
                <ui:NavigationViewItem Name="monitorButton" 
                               Content="Monitor"
                               Icon="{ui:SymbolIcon Symbol=ShareScreenPersonOverlayInside28}" />
            </ui:NavigationView.MenuItems>
        </ui:NavigationView>
        
        <ui:PasswordBox VerticalAlignment="Center" HorizontalAlignment="Center" Width="250" MinWidth="250" ForceCursor="True" Background="#FF616161"/>
    </Grid>
</Window>
